# Database Configuration (Turso)
TURSO_DB_URL=libsql://your-database.turso.io
TURSO_DB_TOKEN=your-turso-auth-token

# Authentication
NUXT_SESSION_PASSWORD=your-32-character-session-password
NUXT_OAUTH_GOOGLE_CLIENT_ID=your-google-oauth-client-id
NUXT_OAUTH_GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
NUXT_OAUTH_GOOGLE_REDIRECT_URL=https://pingtopass.com/auth/oauth/google

# AI Services
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key

# Twitter Intelligence (Phase 2)
TWITTERAPI_IO_KEY=your-twitterapi-io-key

# Email Service (Optional)
RESEND_API_TOKEN=re_your-resend-api-token
EMAILS_FROM_EMAIL=noreply@pingtopass.com

# Application Settings
APP_NAME=PingToPass
BASE_URL=https://pingtopass.com

# Cloudflare Configuration (automatically set in production)
CF_PAGES_URL=https://pingtopass.pages.dev
CF_PAGES_COMMIT_SHA=auto-populated
CF_PAGES_BRANCH=auto-populated

# NuxtHub (automatically configured)
NUXT_HUB_PROJECT_URL=https://hub.nuxt.com/your-project
NUXT_HUB_PROJECT_SECRET_KEY=auto-generated

# Development Only
NODE_ENV=development
NITRO_PORT=3000

# Redis (optional for production caching)
REDIS_URL=redis://localhost:6379